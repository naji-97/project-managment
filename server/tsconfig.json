{
  "compilerOptions": {          
    "target": "es2022",                      
    "module": "commonjs",   
    "outDir": "./dist",                     
    "rootDir": "./",                     
    "strict": true,                         
    "esModuleInterop": true,                
    "skipLibCheck": true,                   
    "forceConsistentCasingInFileNames": true, 
    "sourceMap": true,                      
    "resolveJsonModule": true,             
    "baseUrl": ".",         
    "paths": {                              
      "@/*": ["src/*"]
    }
  },
  "ts-node": {
    "transpileOnly": true
  },
  "include": [
    "src/**/*.ts", "prisma/**/*"                         
  ],
  "exclude": [
    "node_modules",                       
    "dist"                        
  ]
}
